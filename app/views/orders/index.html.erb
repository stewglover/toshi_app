<h1>Orders Page</h1>
<p>Here you can view all your orders</p>

<h4>Create new order: <%= link_to "New Order", new_order_path  %></h4>

<% @orders.each do |order| %>
  <div class="container card text-center shadow rounded mb-3 mt-3">
    <div class="card-header">
     <strong> <%= order.customer_name %> </strong>
    </div>
    <div class="card-body">
       <p class="card-text">Journey Time: <%= order.journey_time %> mins </p>
       <p class="card-text">Delivery Due: <%= order.delivery_due %></p>
       <p class="card-text">Starting location: <%= order.delivery.start_address %></p>
       <p class="card-text">End location: <%= order.delivery.end_address %></p>
    </div>
    <div class="mb-3">
      <%= link_to "Show", order_path(order), class: "btn btn-primary" %>
      <%= link_to "Edit", edit_order_path(order), class: "btn btn-outline-success " %></>
      <%= link_to "Delete", order_path(order), class: "btn btn-danger", method: :delete %>
  </div>
  </div>
<% end %>
